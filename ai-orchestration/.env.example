# ============================================================================
# MIMIR AI ORCHESTRATION CONFIGURATION
# ============================================================================
# Copy this file to .env and customize as needed

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Neo4j Database Password
# ⚠️  SECURITY WARNING: Change this immediately for production!
# Generate a secure password: openssl rand -base64 32
NEO4J_PASSWORD=password

# Your main workspace directory (will be mounted read-only)
# This allows all projects in your workspace to be indexed and accessed
# Default: C:/Users/Colter/Desktop/Projects (parent of AI_Orchestration)
HOST_WORKSPACE_ROOT=C:/Users/Colter/Desktop/Projects

# ============================================================================
# EMBEDDINGS CONFIGURATION (for semantic search)
# ============================================================================

# Enable/disable embeddings
MIMIR_EMBEDDINGS_ENABLED=true
MIMIR_FEATURE_VECTOR_EMBEDDINGS=true

# Embeddings Provider
# Options: "ollama" (local/offline - recommended) or "copilot" (requires GitHub Copilot)
MIMIR_EMBEDDINGS_PROVIDER=ollama

# Embedding Model for Ollama
# Default: nomic-embed-text (good quality, fully local)
MIMIR_EMBEDDINGS_MODEL=nomic-embed-text
MIMIR_EMBEDDINGS_DIMENSIONS=768

# Text chunking settings
MIMIR_EMBEDDINGS_CHUNK_SIZE=400
MIMIR_EMBEDDINGS_CHUNK_OVERLAP=100
MIMIR_EMBEDDINGS_DELAY_MS=0
MIMIR_EMBEDDINGS_MAX_RETRIES=3

# ============================================================================
# OPTIONAL: ADVANCED FEATURES
# ============================================================================

# Enable PM model suggestions
MIMIR_FEATURE_PM_MODEL_SUGGESTIONS=false

# ============================================================================
# OPTIONAL: CORPORATE NETWORK SETTINGS
# ============================================================================
# Only needed if you're behind a corporate proxy

# Proxy settings (uncomment if needed)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# Custom CA certificates (uncomment if needed)
# SSL_CERT_FILE=/path/to/corporate-ca.crt

# ============================================================================
# OPTIONAL: GRAFANA MONITORING
# ============================================================================

# Grafana admin credentials
# ⚠️  SECURITY WARNING: Set strong passwords for production!
# Generate a secure password: openssl rand -base64 32
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_password_immediately
# CURL_CA_BUNDLE=/path/to/corporate-ca.crt
