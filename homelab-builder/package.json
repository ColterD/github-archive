{
  "name": "homelab-builder",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "vite dev",
    "build": "prisma generate && vite build",
    "preview": "vite preview",
    "start": "node scripts/railway-start.js",
    "start:local": "node scripts/start.js",
    "start:railway": "node scripts/railway-start.js",
    "start:dev": "prisma migrate deploy && node build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:unit": "vitest --run",
    "test:watch": "vitest --watch",
    "test:security": "npm audit && snyk test",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test:unit && pnpm run build",
    "validate:full": "pnpm run type-check && pnpm run lint && pnpm test && pnpm run test:e2e && pnpm run test:security && pnpm run build",
    "deploy": "pnpm run validate:full && git push origin main",
    "setup": "pnpm install && pnpm run db:generate && pnpm run db:push",
    "reset": "pnpm run db:reset && pnpm run db:seed",
    "health": "pnpm run type-check && pnpm run build && echo 'Health check passed'",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "commit": "git add . && git commit",
    "push": "git push origin main",
    "full-reset": "rm -rf node_modules && rm -rf .svelte-kit && pnpm install && pnpm run setup",
    "search:index": "meilisearch-index-update",
    "email:test": "node scripts/test-email.js",
    "security:scan": "snyk test && npm audit",
    "performance:analyze": "lighthouse-ci autorun",
    "docker:build": "docker build -t homelab-builder .",
    "docker:run": "docker run -p 5173:5173 homelab-builder",
    "railway:deploy": "railway up",
    "railway:connect": "railway link",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "clean": "rm -rf .svelte-kit build node_modules/.cache",
    "analyze:bundle": "vite build --mode analyze",
    "analyze:size": "node scripts/bundle-analyzer.js",
    "test:stress": "node scripts/stress-test.js",
    "backup:db": "node scripts/backup-database.js",
    "migrate:prod": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "seed:prod": "NODE_ENV=production tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^20.19.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prisma": "^6.11.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "shadcn-svelte": "^1.0.6",
    "snyk": "^1.1297.3",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "tailwind-variants": "^1.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@auth/sveltekit": "^1.10.0",
    "@fontsource/inter": "^5.2.6",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.49.2",
    "@prisma/client": "^6.11.1",
    "@sentry/sveltekit": "^8.55.0",
    "@tailwindcss/vite": "4.1.11",
    "@types/bcrypt": "^5.0.2",
    "@uploadthing/svelte": "^7.3.2",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "lucide-svelte": "^0.525.0",
    "meilisearch": "^0.51.0",
    "mode-watcher": "^1.1.0",
    "nanoid": "^5.1.5",
    "rate-limiter-flexible": "^5.0.5",
    "redis": "^5.6.0",
    "resend": "^4.6.0",
    "sharp": "^0.33.5",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "ws": "^8.18.3",
    "zod": "^4.0.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines"
    ],
    "overrides": {
      "got": ">=11.8.5",
      "esbuild": ">=0.25.0",
      "cookie": ">=0.7.0",
      "lighthouse": ">=11.0.0"
    }
  }
}
