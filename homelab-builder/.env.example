# =============================================================================
# HOMELAB INFRASTRUCTURE CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your setup

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
PUBLIC_APP_NAME="My Homelab"
PUBLIC_APP_URL="http://localhost:5173"
ORIGIN=http://localhost:5173

# Server Configuration
PORT=5173
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Railway automatically provides DATABASE_URL)
# DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_URL="postgresql://homelab_user:secure_password@localhost:5432/homelab"

# Redis Cache
REDIS_URL=redis://localhost:6379
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Authentication Secret (Generate with: openssl rand -base64 32)
AUTH_SECRET=generate_with_openssl_rand_base64_32
AUTH_GITHUB_ID=your_github_oauth_app_id
AUTH_GITHUB_SECRET=your_github_oauth_app_secret
AUTH_GOOGLE_ID=your_google_oauth_client_id
AUTH_GOOGLE_SECRET=your_google_oauth_client_secret

# Content Security Policy
CONTENT_SECURITY_POLICY_NONCE_SECRET=generate_random_32_chars
CSP_REPORT_URI=/api/security/csp-report

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Search Engine (Meilisearch)
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key

# Image Upload (UploadThing)
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Performance & CDN
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=homelab-builder

# Analytics (Privacy-first)
PLAUSIBLE_DOMAIN=yourdomain.com
PLAUSIBLE_API_KEY=your_plausible_api_key

# Prometheus Configuration
PROMETHEUS_URL="http://localhost:9090"
PROMETHEUS_METRICS_PATH="/api/metrics"

# Grafana Configuration
GRAFANA_URL="http://localhost:3000"
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Alertmanager Configuration
ALERTMANAGER_URL="http://localhost:9093"

# Application Metrics
METRICS_ENABLED=true
METRICS_COLLECT_DEFAULT=true

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Email Notifications
NOTIFICATION_EMAIL="admin@yourdomain.com"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_CHANNEL="#homelab-alerts"

# Discord Notifications
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"

# =============================================================================
# BACKUP & STORAGE
# =============================================================================

# Local Backup Configuration
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=homelab-backups

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

ADMIN_EMAIL=admin@yourdomain.com
INITIAL_ADMIN_PASSWORD=change_this_secure_password

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# eBay Integration (Phase 3)
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id
EBAY_USER_TOKEN=your_ebay_user_token

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/homelab-builder

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_MODE=true
DEBUG=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_METRICS_COLLECTION=true
FEATURE_AUTOMATED_BACKUPS=true
FEATURE_HEALTH_CHECKS=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Generate secure random values for secrets
# 4. Update default credentials before production deployment
# 5. Configure monitoring and alerting properly
# 6. Set up regular backup procedures
#
# =============================================================================